@model IEnumerable<ProductVM>

@{
    ViewData["Title"] = "Home Page";
    var detailsRoute = "/Product/Details/{0}";
}

<div class="row">

    @foreach( var product in Model)
    {
        <div class="col-4">
            <div class="card mb-4">

                <div class="card-header">
                    <h4 class="my-0 font-weight-normal">
                        <label style="font-size: 23px; color: steelblue; font-family: Georgia, serif;">@product.Name</label>
                    </h4>
                </div>

                <img class="card-img-top" src="~/@product.ImagePath" alt="No image" onerror="this.onerror=null;this.src='img/no_image.jpg';" />

                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <label style="font-size: 21px; color: #e35e0b "><b>Lei @product.Price</b></label>
                        </div>
                        <a href="@string.Format(detailsRoute, product.Id)" class="btn pull-right btn-outline-info">View Details</a>
                    </div>
                </div>

            </div>
        </div>
    }

</div>